@using CRUDLayout.Models;
@model IEnumerable<Product>

@{
    ViewBag.Title = "ShowAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-3">
    <h2 class="mt-3 mb-3">Show all products</h2>

    <p>
        <a href="@Url.Action("Create","Admin")" class="btn btn-outline-info">Create New</a>
    </p>
    <hr />
    <table class="table table-striped table-responsive-lg ">
        <thead class="bg-dark text-white">
            <tr>
                <th class="w-25 text-capitalize">
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th class="w-25 text-capitalize">
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr id="@item.id">
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td width="300" align="right">
                        <a href="@Url.Action("Details","Admin", new { id = item.id })" class="btn btn-success text-white">
                            <i class="fas fa-bars"></i>
                        </a>
                        <a href="@Url.Action("Edit","Admin", new { id = item.id })" class="btn btn-primary text-white">
                            <i class="far fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Delete","Admin", new { id = item.id })" class="btn btn-danger text-white" onclick="return confirm('Are you sure you want to delete this record?');">
                            <i class="far fa-trash-alt"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>